#register.popup
  .popup__bg
  .popup__wrap
    .popup__close
    .popup__content.popup__content--form
      h3.title-h2.popup__title Вход

      form.form.popup__form
        input.input--email(type='email' placeholder='Ваша почта')
        input.input--password(type='password' placeholder='Ваш пароль')
        button.btn.btn--lg.btn--primary(type="submit") Войти

      .popup__social
        p.text-p2.popup__social-text Регистрация с помощью:
        ul.popup__social-list
          li.popup__social-item
            img.popup__social-link(src="/img/icon/google.svg" alt="")
          li.popup__social-item
            img.popup__social-link(src="/img/icon/facebook.svg" alt="")
          li.popup__social-item
            img.popup__social-link(src="/img/icon/vk.svg" alt="")

      a(href="#").link-secondary.popup__forgot Забыли пароль? 